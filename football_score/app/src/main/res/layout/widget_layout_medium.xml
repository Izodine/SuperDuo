<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/widget"
    android:background="#000000"
    android:paddingLeft="@dimen/std_pad_start"
    android:paddingRight="@dimen/std_pad_end"
    android:paddingEnd="@dimen/std_pad_end"
    android:paddingStart="@dimen/std_pad_start">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/widget_loading_data_text"
        android:id="@+id/widgetTextView"
        android:layout_gravity="center"
        android:allowUndo="false" />

</FrameLayout>